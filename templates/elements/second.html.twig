<section id="second" class="border-b border-gray-200">
    <div class="container mx-auto">
        <div class="flex flex-col mb-32">
            <div class="flex flex-col lg:flex-row flex-wrap justify-center items-center py-16">
                <div class="flex-auto lg:flex-1 flex flex-col justify-end items-center mb-8">
                    <div class="flex justify-center items-center w-48 h-48">
                        <a href="#"><img class="w-48 h-auto" src="/assets/images/img-zendguard.jpg" alt="zendguard" /></a>
                    </div>
                    <div><a href="#">PHP Zend Guard Loader</a></div>
                </div>
                <div class="flex-auto lg:flex-1 flex flex-col justify-end items-center">
                    <div class="flex justify-center items-center w-48 h-48">
                        <a href="#"><img class="w-32 h-auto" src="/assets/images/img-composer.jpg" alt="composer" /></a>
                    </div>
                    <div><a href="#">PHP Composer</a></div>
                </div>
                <div class="flex-auto lg:flex-1 flex flex-col justify-end items-center">
                    <div class="flex justify-center items-center w-48 h-48">
                        <a href="#"><img class="w-48 h-auto" src="/assets/images/img-ioncube.jpg" alt="ioncube" /></a>
                    </div>
                    <div><a href="#">PHP ionCube Loader</a></div>
                </div>
            </div>
            <div class="flex flex-col justify-center items-center py-16">
                <div class="MontserratBold font-bold text-3xl">Paket Hosting Singapura yang Tepat</div>
                <div class="Montserrat text-2xl">Diskon 40% + Domain dan SSL Gratis untuk Anda</div>
            </div>
            <div class="flex flex-col lg:flex-row justify-center items-start text-roboto">
                {% for item in config.packages %}
                <div
                    class="relative text-center border rounded {{item.best_seller ? 'z-10 best-seller border-blue-500 border' : 'border-gray-200'}} mt-8">
                    <div
                        class="text-roboto-bold font-black text-2xl p-2 border-t border-b {{item.best_seller ? 'bg-blue-500 text-white border-blue-500' : '' }}">
                        {{ item.title }}</div>
                    <div
                        class="text-montserrat p-2 border-b {{item.best_seller ? 'bg-blue-500 text-white border-blue-500' : '' }}">
                        <div class="line-through">Rp
                            {{ item.price_original // 1000 }}.{{ item.price_original % 1000 }}</div>
                        <div class="flex items-start justify-center space-x-1"><span>Rp</span><span
                                class="text-montserrat-black text-4xl font-black">{{ item.price // 1000 }}</span><span
                                class="text-montserrat-black font-bold">.{{ item.price % 1000 }}</span>/ bln</div>
                    </div>
                    <div class="p-2 border-b {{item.best_seller ? 'bg-blue-600 text-white border-blue-500' : '' }}">
                        <span class="font-bold">{{ item.jumlah_pengguna | number_format(0,',','.') }}</span>
                        Pengguna Terdaftar</div>
                    <div class="p-2 pt-8 border-b">
                        <p class="font-bold">{{ item.feature_title }}</p>
                        {% for feature in item.feature %}
                        <p class="leading-10">&nbsp;&nbsp;&nbsp;&nbsp;{{ feature | parse_feature_detail | raw }}
                            &nbsp;&nbsp;&nbsp;&nbsp;</p>
                        {% endfor %}
                        <button
                            class="{{item.best_seller ? 'button-blue' : 'button-black'}} mt-16 mb-8">{{ item.button }}</button>
                    </div>
                    {% if item.best_seller %}
                    <img class="absolute -top-2 -left-2" src="/assets/images/tag-best-seller.png" />
                    {% endif %}
                </div>
                {% endfor %}
            </div>
        </div>

        <div class="flex flex-col items-center mb-16">
            <div class="text-center text-3xl mb-16">Powerful dengan Limit PHP yang Lebih Besar</div>
            <div class="flex flex-col lg:flex-row flex-wrap justify-center items-center text-center text-roboto w-full">
                <ul class="feature-list">
                    <li class="p-2 pl-6 border border-gray-100"><span class="w-96">max execution time 300s</span>
                    </li>
                    <li class="p-2 pl-6 border border-gray-200 bg-blue-50"><span class="w-96">max execution time
                            300s</span></li>
                    <li class="p-2 pl-6 border border-gray-200"><span class="w-96">php memory limit 1024 MB</span>
                    </li>
                </ul>
                <div class="hidden xl:block w-8"></div>
                <ul class="feature-list">
                    <li class="p-2 pl-6 border border-gray-200"><span class="w-96">post max size 128 MB</span></li>
                    <li class="p-2 pl-6 border border-gray-200 bg-blue-50"><span class="w-96">upload max filesize
                            128 MB</span></li>
                    <li class="p-2 pl-6 border border-gray-200"><span class="w-96">max input vars 2500</span></li>
                </ul>
            </div>
        </div>

